<section class="cta-section pine-gradient">
  <div class="cta-pattern"></div>

  <div class="container cta-container">
    {% if section.settings.heading != blank %}
      <h2 class="cta-heading serif">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="cta-description">{{ section.settings.description }}</p>
    {% endif %}

    <div class="cta-buttons">
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="cta-button primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}

      {% for block in section.blocks %}
        {% if block.type == 'button' %}
          <a href="{{ block.settings.button_link }}" class="cta-button" {{ block.shopify_attributes }}>
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: 6rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
    color: white;
  }

  .cta-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .cta-container {
    max-width: 48rem;
    position: relative;
    z-index: 10;
  }

  .cta-heading {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .cta-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .cta-button {
    display: inline-block;
    background-color: transparent;
    color: white;
    padding: 1.5rem 3.5rem;
    border-radius: 9999px;
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid white;
  }

  .cta-button.primary {
    background-color: white;
    color: var(--color-primary);
    border: 2px solid white;
    box-shadow: 0 20px 50px -10px rgba(0, 0, 0, 0.3);
  }

  .cta-button:hover {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 25px 60px -10px rgba(0, 0, 0, 0.4);
  }

  .cta-button.primary:hover {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }
</style>

{% schema %}
{
  "name": "Call to Action",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Clean."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Conveniently available in single units and bulk multi-packs via our official Amazon marketplace."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy King Pine on Amazon"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Additional Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Call to Action",
      "blocks": []
    }
  ]
}
{% endschema %}
