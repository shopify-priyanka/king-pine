<section class="collection-products">
  <div class="container">
    {% if collection.products.size > 0 %}
      <div class="products-grid">
        {% for product in collection.products %}
          <div class="product-card">
            <div class="product-image-wrapper">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | img_url: '800x1000' }}"
                    alt="{{ product.title }}"
                    class="product-image"
                    loading="lazy"
                  >
                {% else %}
                  <div class="product-image-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
              </a>
              <div class="product-overlay">
                <a href="{{ product.url }}" class="btn btn-white"> View Details </a>
              </div>
            </div>

            <div class="product-info">
              {% if product.metafields.custom.scent %}
                <h3 class="product-title serif">
                  <a href="{{ product.url }}">{{ product.metafields.custom.scent }}</a>
                </h3>
              {% else %}
                <h3 class="product-title serif">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
              {% endif %}

              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="price-current">{{ product.price | money }}</span>
              </div>

              {% if product.metafields.custom.short_description %}
                <p class="product-description">{{ product.metafields.custom.short_description }}</p>
              {% elsif product.description != blank %}
                <p class="product-description">{{ product.description | strip_html | truncate: 100 }}</p>
              {% endif %}

              <a href="{{ product.url }}" class="product-link">
                Learn More
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-collection">
        <p>No products found in this collection.</p>
      </div>
    {% endif %}

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .collection-products {
    padding: 4rem 0 8rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4rem;
    }
  }

  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .product-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-image-wrapper {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    border-radius: 2.5rem;
    margin-bottom: 2rem;
    box-shadow: 0 30px 60px -15px rgba(26, 46, 38, 0.15);
    background-color: var(--color-background);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-image {
    transform: scale(1.1);
  }

  .product-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(26, 46, 38, 0.2);
    opacity: 0;
    transition: opacity 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card:hover .product-overlay {
    opacity: 1;
  }

  .btn-white {
    background-color: white;
    color: var(--color-primary);
    padding: 1rem 2rem;
    border-radius: 9999px;
    font-weight: 700;
    font-size: 0.875rem;
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.3);
    transform: translateY(1rem);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: inline-block;
  }

  .product-card:hover .btn-white {
    transform: translateY(0);
  }

  .product-info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .product-title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    transition: color 0.3s;
  }

  .product-title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .product-card:hover .product-title a {
    color: var(--color-secondary);
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .price-compare {
    font-size: 1rem;
    color: rgba(26, 46, 38, 0.4);
    text-decoration: line-through;
  }

  .price-current {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-secondary);
  }

  .product-description {
    color: rgba(26, 46, 38, 0.6);
    margin-bottom: 1.5rem;
    flex-grow: 1;
    line-height: 1.6;
    font-weight: 300;
  }

  .product-link {
    color: var(--color-accent);
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: gap 0.3s;
  }

  .product-link:hover {
    gap: 0.75rem;
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-collection {
    text-align: center;
    padding: 4rem 0;
    font-size: 1.25rem;
    color: rgba(26, 46, 38, 0.6);
  }

  .pagination {
    margin-top: 4rem;
    text-align: center;
  }
</style>

{% schema %}
{
  "name": "Product Grid",
  "settings": []
}
{% endschema %}
