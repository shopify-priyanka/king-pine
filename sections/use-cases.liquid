<section class="use-cases-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-header">
        <h2 class="section-title serif">{{ section.settings.heading }}</h2>
        <div class="section-divider"></div>
        {% if section.settings.description != blank %}
          <p class="section-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="use-cases-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'use_case' %}
            <div class="use-case-card" {{ block.shopify_attributes }}>
              <div class="use-case-icon">
                {% if block.settings.icon == 'home' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                  </svg>
                {% elsif block.settings.icon == 'kitchen' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                  </svg>
                {% elsif block.settings.icon == 'garage' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M21.5 12.5h-19V20a1 1 0 0 0 1 1h17a1 1 0 0 0 1-1v-7.5z"></path>
                    <path d="M2 8V6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v2"></path>
                    <path d="M7 12v4M17 12v4"></path>
                  </svg>
                {% elsif block.settings.icon == 'industrial' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M2 20h20M4 20V9l5 5V9l5 5V6l5 5v9"></path>
                  </svg>
                {% elsif block.settings.icon == 'school' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                    <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
                  </svg>
                {% elsif block.settings.icon == 'commercial' %}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="36"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="16" x2="12" y2="12"></line>
                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                  </svg>
                {% endif %}
              </div>
              <span class="use-case-label">{{ block.settings.label }}</span>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .use-cases-section {
    padding: 8rem 0;
    background-color: var(--color-background);
  }

  .section-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .section-divider {
    width: 4rem;
    height: 4px;
    background-color: var(--color-accent);
    margin: 0 auto 1.5rem;
  }

  .section-description {
    font-size: 1.25rem;
    color: rgba(26, 46, 38, 0.6);
    font-weight: 300;
    font-style: italic;
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .use-cases-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .use-cases-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .use-case-card {
    background-color: white;
    padding: 2.5rem;
    border-radius: 2rem;
    box-shadow: 0 15px 35px -5px rgba(26, 46, 38, 0.05);
    border: 1px solid rgba(26, 46, 38, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    width: 210px;
  }

  .use-case-card:hover {
    transform: translateY(-0.5rem);
    box-shadow: 0 25px 60px -15px rgba(26, 46, 38, 0.12);
  }

  .use-case-icon {
    color: var(--color-secondary);
    padding: 1rem;
    background-color: var(--color-background);
    border-radius: 1rem;
    transition: all 0.5s;
  }

  .use-case-card:hover .use-case-icon {
    background-color: var(--color-primary);
    color: white;
    transform: scale(1.1);
  }

  .use-case-label {
    font-weight: 700;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.6;
    transition: opacity 0.3s;
  }

  .use-case-card:hover .use-case-label {
    opacity: 1;
  }
</style>

