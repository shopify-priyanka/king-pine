      "default": "Request a Commercial Quote"
    },
    {
      "type": "url",
      "id": "bulk_button_link",
      "label": "Bulk Button Link"
    }
  ],
  "blocks": [
    {
      "type": "product_item",
      "name": "Product Item",
      "settings": [
        {
          "type": "image_picker",
