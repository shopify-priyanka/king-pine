        {
          "type": "text",
          "id": "detail_text",
          "label": "Detail Button Text",
          "default": "View Technical Details"
        },
        {
          "type": "url",
          "id": "detail_link",
          "label": "Detail Page Link"
        },
        {
          "type": "url",
          "id": "amazon_link",
          "label": "Amazon Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products List"
    }
  ]
}
{% endschema %}
