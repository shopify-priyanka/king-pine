<section class="products-list-section">
  <div class="container">
    <!-- Page Header -->
    <div class="products-header">
      {% if section.settings.badge_text != blank %}
        <span class="products-badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1 class="products-heading serif">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="products-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <!-- Products Grid -->
    <div class="products-alternating">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product_item' %}
            <div
              class="product-row {% if forloop.index == 1 %}product-row-first{% endif %} {% cycle 'product-left', 'product-right' %}"
              {{ block.shopify_attributes }}
            >
              <div class="product-image-col">
                <div class="product-image-wrapper">
                  <div class="product-image-shadow"></div>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 800, height: 1000 }}"
                      alt="{{ block.settings.name }}"
                      class="product-image"
                      width="800"
                      height="1000"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="product-placeholder">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              </div>

              <div class="product-content-col">
                {% if block.settings.scent != blank %}
                  <span class="product-scent-badge">{{ block.settings.scent }} Edition</span>
                {% endif %}

                {% if block.settings.name != blank %}
                  <h2 class="product-name serif">{{ block.settings.name }}</h2>
                {% endif %}

                {% if block.settings.description != blank %}
                  <p class="product-text">{{ block.settings.description }}</p>
                {% endif %}

                {% if block.settings.features != blank %}
                  <div class="product-features-grid">
                    {% assign features = block.settings.features | split: ',' %}
                    {% for feature in features limit: 4 %}
                      <div class="feature-item">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                          <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                        <span>{{ feature | strip }}</span>
                      </div>
                    {% endfor %}
                  </div>
                {% endif %}

                <div class="product-cta-buttons">
                  {% if block.settings.detail_link != blank and block.settings.detail_text != blank %}
                    <a href="{{ block.settings.detail_link }}" class="btn btn-dark">
                      {{ block.settings.detail_text }}
                    </a>
                  {% endif %}

                  {% if block.settings.amazon_link != blank %}
                    <a
                      href="{{ block.settings.amazon_link }}"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn btn-outline"
                    >
                      Buy on Amazon
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                      </svg>
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Bulk Sales Section -->
    {% if section.settings.show_bulk_section %}
      <div class="bulk-sales-section">
        <div class="bulk-bg-pattern"></div>
        <div class="bulk-content">
          <h3 class="bulk-heading serif">{{ section.settings.bulk_heading | default: 'Bulk Industrial Supply' }}</h3>
          <p class="bulk-text">
            {{
              section.settings.bulk_description
              | default: 'We offer strategic fulfillment for janitorial distributors, schools, hospitals, and heavy manufacturing facilities requiring large-scale solutions.'
            }}
          </p>
          {% if section.settings.bulk_button_link != blank %}
            <a href="{{ section.settings.bulk_button_link }}" class="btn btn-gold">
              {{ section.settings.bulk_button_text | default: 'Request a Commercial Quote' }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .products-list-section {
    padding: 10rem 0 8rem;
    background-color: var(--color-background);
  }

  .products-header {
    max-width: 48rem;
    margin-bottom: 8rem;
  }

  .products-badge {
    color: var(--color-accent);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    font-size: 0.75rem;
    margin-bottom: 1.5rem;
    display: block;
  }

  .products-heading {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .products-description {
    font-size: 1.25rem;
    color: rgba(26, 46, 38, 0.6);
    line-height: 1.6;
    font-weight: 300;
  }

  .products-alternating {
    display: flex;
    flex-direction: column;
    gap: 12rem;
  }

  .product-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  .product-row-first {
    margin-top: 0;
  }

  @media (min-width: 1024px) {
    .product-row {
      grid-template-columns: 1fr 1fr;
      gap: 8rem;
    }

    .product-left .product-image-col {
      order: 1;
    }

    .product-left .product-content-col {
      order: 2;
    }

    .product-right .product-image-col {
      order: 2;
    }

    .product-right .product-content-col {
      order: 1;
    }
  }

  .product-image-wrapper {
    position: relative;
  }

  .product-image-shadow {
    position: absolute;
    inset: 0;
    background-color: rgba(45, 90, 39, 0.05);
    border-radius: 3rem;
    transform: translate(2rem, 2rem);
    z-index: -1;
    transition: transform 0.7s;
  }

  .product-row:hover .product-image-shadow {
    transform: translate(1rem, 1rem);
  }

  .product-image {
    width: 100%;
    aspect-ratio: 4/5;
    object-fit: cover;
    border-radius: 3rem;
    box-shadow: 0 40px 80px -20px rgba(26, 46, 38, 0.2);
    background-color: white;
  }

  .product-placeholder {
    width: 100%;
    aspect-ratio: 4/5;
    border-radius: 3rem;
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-scent-badge {
    background-color: rgba(164, 124, 72, 0.1);
    color: var(--color-accent);
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.625rem;
    margin-bottom: 1.5rem;
    display: inline-block;
  }

  .product-name {
    font-size: clamp(2.5rem, 4vw, 3rem);
    font-weight: 700;
    margin-top: 0.5rem;
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .product-text {
    font-size: 1.125rem;
    color: rgba(26, 46, 38, 0.7);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    font-weight: 300;
  }

  .product-features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .product-features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.875rem;
  }

  .feature-item svg {
    flex-shrink: 0;
    color: var(--color-secondary);
    margin-top: 0.125rem;
  }

  .feature-item span {
    font-weight: 500;
    opacity: 0.8;
  }

  .product-cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  @media (min-width: 640px) {
    .product-cta-buttons {
      flex-direction: row;
    }
  }

  .btn-dark {
    background-color: var(--color-primary);
    color: white;
    padding: 1.25rem 2.5rem;
    border-radius: 9999px;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-dark:hover {
    background-color: var(--color-secondary);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(26, 46, 38, 0.2);
  }

  .btn-outline {
    background-color: white;
    border: 2px solid rgba(26, 46, 38, 0.1);
    color: var(--color-primary);
    padding: 1.25rem 2.5rem;
    border-radius: 9999px;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-center;
    gap: 0.5rem;
    transition: all 0.3s;
  }

  .btn-outline:hover {
    background-color: var(--color-background);
    border-color: var(--color-primary);
  }

  .bulk-sales-section {
    margin-top: 12rem;
    padding: 4rem;
    background-color: var(--color-primary);
    border-radius: 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .bulk-sales-section {
      padding: 6rem;
    }
  }

  .bulk-bg-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.05;
    background-image: url('https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?auto=format&fit=crop&q=80&w=1600');
    background-size: cover;
    background-position: center;
    transition: transform 10s;
  }

  .bulk-sales-section:hover .bulk-bg-pattern {
    transform: scale(1.1);
  }

  .bulk-content {
    position: relative;
    z-index: 10;
  }

  .bulk-heading {
    font-size: clamp(1.875rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: white;
  }

  .bulk-text {
    color: rgba(255, 255, 255, 0.6);
    max-width: 42rem;
    margin: 0 auto 3rem;
    font-weight: 300;
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .btn-gold {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 9999px;
    font-weight: 700;
    font-size: 1.125rem;
    text-decoration: none;
    transition: all 0.3s;
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.3);
  }

  .btn-gold:hover {
    transform: scale(1.05);
  }
</style>

